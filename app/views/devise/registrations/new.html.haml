- breadcrumb :users_new
= render "layouts/breadcrumbs"
.body
  .header
    .header_icon
      = image_tag 'logo.png', class: 'logo2'
  .main
    .main_body
      .main_body_user
        会員情報登録
      .main_body_form
        = form_with local: true, model: @user, url: user_registration_path do |f|
          = render "devise/shared/error_messages", resource: @user
          .field
            = f.label :ニックネーム
            %span 必須
            %br/
            = f.text_field :nickname,placeholder: '例）ラクマ太郎',class:"box"
          .field
            = f.label :メールアドレス
            %span 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: '@とドメインを含む',class:"box"
          .field
            = f.label :パスワード
            %span 必須
            - if @minimum_password_length
              %em
                -# (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password",placeholder: '7文字以上',class:"box"
          .field
            = f.label :パスワード確認
            %span 必須
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password",class:"box"
          .me
            本人確認
          .field
            = f.label :苗字
            %span 必須
            %br/
            = f.text_field :family_name, placeholder: "例）田中",class:"box"
          .field
            = f.label :名前
            %span 必須
            %br/
            = f.text_field :first_name, placeholder: "例）太郎",class:"box"
          .field
            = f.label :苗字（かな）
            %span 必須
            %br/
            = f.text_field :family_name_kana, placeholder: "例）たなか",class:"box"
          .field
            = f.label :名前（かな）
            %span 必須
            %br/
            = f.text_field :first_name_kana, placeholder: "例）たろう",class:"box"
          .field
            = f.label :誕生日
            %span 必須
            %br/
            = f.date_select :birth_day, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
          .actions
            = f.submit "次へ進む",class:"send"
        = render "devise/shared/links"
