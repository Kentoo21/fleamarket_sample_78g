%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Price
      %th Text
      %th Status
      %th Size
      %th Shipping fee
      %th Shipping date
      %th User
      %th Category
      %th Brand
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.price
        %td= item.text
        %td= item.status
        %td= item.size
        %td= item.shipping_fee
        %td= item.shipping_date
        %td= item.user
        %td= item.category
        %td= item.brand
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
