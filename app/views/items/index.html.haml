// トップページより引用（ログイン中の挙動を見るため）
.top-header
  .top-header__box
    .top-header__box__top
      = image_tag 'logo.png', class: 'logo'
      = form_with class: 'form' do |f|
        = f.text_field :text, class: 'form__text', placeholder: 'キーワードから探す'
        = f.label :image, class: 'send' do
          = image_tag 'icon-search 1.png', class: 'form__send'
          = f.submit 'send', class: 'hidden'
    .top-header__box__bot
      .top-header__box__bot__left
        .category
          = link_to "カテゴリー","#"
        .brand
          = link_to "ブランド","#"
      .top-header__box__bot__right
        -if user_signed_in?
          %li.top-header__box__bot__right__list
            =link_to"マイページ","#"
          %li.top-header__box__bot__right__list
            =link_to"仮ログアウト",destroy_user_session_path,method: :delete
        -else
          %li.top-header__box__bot__right__list
            =link_to"ログイン",new_user_session_path
          %li.top-header__box__bot__right__list
            =link_to"新規登録",new_user_registration_path
