= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :item
    = f.text_field :item
  .actions
    = f.submit 'Save'
