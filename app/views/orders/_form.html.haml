    = f.label :first_name_kana
    = f.text_field :first_name_kana
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :prefecture
    = f.text_field :prefecture
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :local
    = f.text_field :local
  .field
    = f.label :building_name
    = f.text_field :building_name
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :user
    = f.text_field :user
