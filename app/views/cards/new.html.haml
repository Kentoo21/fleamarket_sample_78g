.default-main
  = render "items/header"

  .main
    .CardContents
      .CardContents__head
        クレジットカード情報入力
      .CardContents__content
        = form_with(model: @card, method: :post, id: 'card-form', html:{name: "inputForm"}) do |f|
          .CardForm
            .CardForm__name
              %label カード番号
              %span 必須
            =f.text_field :number, class: "card_number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %ul.CardImages
              %li.CardImages__image.first
                = image_tag ('cards/visa.svg'), class: 'card_image', size: '49x20'
              %li.CardImages__image
                = image_tag ('cards/master-card.svg'), class: 'card_image', size: '34x20'
              %li.CardImages__image
                = image_tag ('cards/saison-card.svg'), class: 'card_image', size: '30x20'
              %li.CardImages__image
                = image_tag ('cards/jcb.svg'), class: 'card_image', size: '32x20'
              %li.CardImages__image
                = image_tag ('cards/american_express.svg'), class: 'card_image', size: '21x20'
              %li.CardImages__image
                = image_tag ('cards/dinersclub.svg'), class: 'card_image', size: '32x20'
              %li.CardImages__image
                = image_tag ('cards/discover.svg'), class: 'card_image', size: '32x20'


            .CardForm__exp
              %label 有効期限
              %span 必須
            .CardForm__exp-input
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
                %option{value: "2030"}30
              %span 年
            .CardForm__cvc
              %label セキュリティコード
              %span 必須
            = f.text_field :cvc, class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            #card_token
            = f.submit "追加する", id: "token_submit", class: "blue-btn"

    .main__side__content
      %nav.mypage-nav
        %ul.mypage-nav__list
          %li
            = link_to users_path, class: "mypage-nav__list__item" do
              %p マイページ
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品する
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 出品中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 取引中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 売却済み
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 購入した商品 - 取引中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 購入した商品 - 過去の取引
              %i.fas.fa-chevron-right.fa-lg

        .setting__menu
          設定
          %ul.mypage-nav__list
            %li
              = link_to profile_users_path, class: "mypage-nav__list__item" do
                %p プロフィール
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to address_users_path, class: "mypage-nav__list__item" do
                %p 発送元・お届け先住所変更
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to new_card_path, class: "mypage-nav__list__item-active" do
                %p 支払い方法
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to mail_pass_users_path, class: "mypage-nav__list__item" do
                %p メール/パスワード
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to "#", class: "mypage-nav__list__item" do
                %p 本人情報
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to logout_users_path, class: "mypage-nav__list__item" do
                %p ログアウト
                %i.fas.fa-chevron-right.fa-lg
  = render "items/footer"