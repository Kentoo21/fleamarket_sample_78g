.default-main
  = render "items/header"
  .main
    .main__container
      .card__content
        .chapter__header
          支払い方法
        .chapter__inner
          .inner__content
            .chapter__SubHead
              -if @card.present?
                .inner__head
                  クレジットカード情報
                  %figure
                    = image_tag "#{@card_src}",alt: @card_brand, id: "card_image"
                  %p.inner__head__card-name
                    = "**** **** **** " + @default_card_information.last4
                  %p.inner__head__card-exp
                    - exp_month = @default_card_information.exp_month.to_s
                    - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
                .inner__btn
                  = link_to "クレジットカードを削除", card_path(@card.id), method: :delete, class:"inner__btn--blue"
              -else
                .inner__head
                  クレジットカードが登録されていません
                .inner__btn
                  = link_to new_card_path, class:"inner__btn--blue" do
                    クレジットカードを追加する



    .main__side__content
      %nav.mypage-nav
        %ul.mypage-nav__list
          %li
            = link_to users_path, class: "mypage-nav__list__item" do
              %p マイページ
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品する
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 出品中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 取引中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 出品した商品 - 売却済み
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 購入した商品 - 取引中
              %i.fas.fa-chevron-right.fa-lg
          %li
            = link_to "#", class: "mypage-nav__list__item" do
              %p 購入した商品 - 過去の取引
              %i.fas.fa-chevron-right.fa-lg

        .setting__menu
          設定
          %ul.mypage-nav__list
            %li
              = link_to profile_users_path, class: "mypage-nav__list__item" do
                %p プロフィール
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to address_users_path, class: "mypage-nav__list__item" do
                %p 発送元・お届け先住所変更
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to new_card_path, class: "mypage-nav__list__item-active" do
                %p 支払い方法
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to mail_pass_users_path, class: "mypage-nav__list__item" do
                %p メール/パスワード
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to "#", class: "mypage-nav__list__item" do
                %p 本人情報
                %i.fas.fa-chevron-right.fa-lg
            %li
              = link_to logout_users_path, class: "mypage-nav__list__item" do
                %p ログアウト
                %i.fas.fa-chevron-right.fa-lg
  = render "items/footer"
